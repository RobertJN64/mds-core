{
  "name": "@mds-core/mds-policy-author-api",
  "version": "0.8.22",
  "description": "MDS Policy Author API",
  "license": "Apache-2.0",
  "author": "City of Los Angeles",
  "types": "dist/index.d.ts",
  "scripts": {
    "_build": "tsc --build tsconfig.build.json",
    "_test": "PATH_PREFIX=/policy-author jest --runInBand",
    "build": "pnpm _build",
